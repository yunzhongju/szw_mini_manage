/* components/liveItem/liveItem.wxss */
.liveItem{
  height: 514rpx;
}
.item-content{
  margin-bottom: 30rpx;
}
.show-img{
  width: 100%;
  height: 452rpx;
  margin: 20rpx 0;
  position: relative;
  border-radius: 10rpx;
}
.show-img image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.title{
  color: rgb(32, 32, 32);
  font-weight: 500;
}
.status{
  position: absolute;
  left: 15rpx;
  bottom: 30rpx;
  display: flex;
  color: white;
  align-items: center;
  font-size: 12px;
}
.status .left{
  display: flex;
  align-items: center;
  padding: 5rpx 20rpx;
  background-color: red;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.status .left image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}