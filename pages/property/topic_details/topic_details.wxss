@import "../../../utils/css/common.wxss";
.PVB_title {
    font-size: 30rpx;
}

.PVB_avatarBox {
    line-height: 48rpx;
    font-size: 24rpx;
    color: #999;
    margin: 40rpx 0;
}

.PVBAImg {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    float: left;
    margin-right: 10rpx;
}

.main_text {
    font-size: 26rpx;
    color: #666666;
}

.main_text image {
    max-width: 100%;
}

.title02 {
    font-size: 24rpx;
    color: #666;
    padding: 32rpx 0;
}

.title02_2 {
    position: relative;
}

.title02_2 image,
.title02_3 image {
    margin-right: 12rpx;
    width: 44rpx;
    height: 44rpx;
}

.title02_2 .share {
    width: 44rpx;
    height: 44rpx;
}


/* 评论 */

.CommentsBox {
    margin: 28rpx 0 74rpx;
    padding: 0 20rpx 0 32rpx;
}

.CB_title01 {
    font-size: 28rpx;
    color: #000;
    height: 80rpx;
    line-height: 80rpx;
    font-weight: 500;
}

.CB_con {
    padding: 26rpx 0;
    border-bottom: 1rpx solid #E6E6E6;
}

.CB_avatar {
    width: 48rpx;
    height: 48rpx;
}

.CB_avatar image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
}

.CB_text {
    margin: -48rpx 0 0 68rpx;
}

.CBT_01 {
    font-size: 24rpx;
    width: 100%;
    padding-right: 12rpx;
}

.CBT_01 text {
    font-weight: 500;
}

.CBT_01_img image {
    margin-right: 12rpx;
}

.CBT_02 {
    font-size: 24rpx;
    color: #666;
    margin: 12rpx 0 20rpx;
}

.CBT_03 {
    font-size: 20rpx;
    color: #999;
}

.CBT_03 text {
    color: #0091FF;
    margin-left: 28rpx;
}

.CB_all {
    font-size: 26rpx;
    color: #666666;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
}

.CB_con_next {
    background-color: #F9F9F9;
    border-radius: 4rpx;
    margin: 16rpx 0 20rpx;
    padding: 0 20rpx 0 32rpx;
}

.CB_con_next .CBT_01 {
    padding-right: 0;
}

.main_img {
    /* width:200rpx; */
    /* height:150rpx; */
}

.main_img image {
    width: 200rpx;
    height: 150rpx;
    float: left;
}

.main_img image:nth-child(2) {
    margin: 0 36rpx;
}


/* 发表评论 */

.publishBox {
    width: 100%;
    position: fixed;
    bottom: 0;
    height: 98rpx;
    padding: 27rpx 32rpx;
}

.PB_input {
    height: 100%;
    width: 600rpx;
    font-size: 26rpx;
    color: #999;
    padding-left: 15rpx;
    border-right: 1px solid #DDDDDD;
}

.PB_Icon01 {
    margin-left: 32rpx;
}

.PB_Icon01 image {
    margin-left: 19rpx;
}

.PB_Icon02 {
    margin-left: 44rpx;
}