/* pages/live/create_live/create_live.wxss */
.content {
  padding: 20rpx 20rpx;
}
.show-up{
  width: 591rpx;
  height: 877rpx;
  border-radius: 20rpx;
}
.showCode{
  width: 100%;
  height: 100%;
}
.marg-top30{
  margin-top: 30rpx;
  
}
.block {
  /* background-color: #fff; */
  border-radius: 20rpx;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.img-size{
  width: 100%;
  height: 100%;
}
.showImg-item{
  width: 100%;
  height: 275rpx;
  position: relative;
}
.show-close{
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  height: 50rpx;
  width: 50rpx;
  background-color:#22a1ff;
  color: white;
  font-size: 16px;
  font-weight: 600;
  border-radius: 50%;
  text-align: center;
  line-height: 45rpx;
}
.field-item {
  border-radius: 10rpx;
  margin-top: 20rpx;
}

.tip {
  color: red;
  margin-left: 20rpx;
  font-size: 14px;
}
.tip1 {
  color: #22a1ff;
  margin-left: 20rpx;
  font-size: 14px;
  text-decoration:underline;
  display: flex;
  justify-content: center;
}
.img-card {
  height: 300rpx;
  border: 2rpx solid grey;
  padding: 10rpx 20rpx;
  background-color: white;
}
.custom-class{
  color: grey;
  font-size: 12px;
  padding-bottom: 20rpx;
}
.tip-text{
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.uploadBtn{
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  /* border: 2rpx solid black; */
  color: black;
  font-size: 14px;
  background-color: #22a1ff;
  color: white;
}
.show-rule{
  padding: 20rpx 20rpx;
}
.submit-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: white;
  width: 100%;
  padding: 10rpx 30rpx;
}
.loading{
  position: absolute;
  left: 50%;
  top: 50%;
}
.radio-class{
  width: 100%;
  background-color: #fff;
  padding: 25rpx 18rpx;
  border-radius: 20rpx;
}
.radio-class text{
  color: #646566;
  font-size: 30rpx;
}
.radio-class text:before{
  content: '*';
  color: red;
}