/* pages/live/detail/detail.wxss */
.detail-head {
  position: relative;
  height: 300rpx;
  background-color: green;
  color: #fff;
}

.detail-nav {
  position: absolute;
  left: 20rpx;
  top: 100rpx;
  width: 100%;
}

.bg-size {
  width: 100%;
  height: 100%;
}

.detail-info {
  position: absolute;
  bottom: -10rpx;
  left: 0;
  width: 100%;
  padding: 0 20rpx;
}

.head-size {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
}

.flex-center {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.detail-attendance {
  background-color: grey;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
}

.detail-attendance1 {
  background-color: red;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  width: 156rpx;
  text-align: center;
}

.font10 {
  font-size: 24rpx;
  margin-top: 20rpx;
}

.ellipsis_one {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}


.detail-content {
  height: 1000rpx;
  width: 100%;
  padding: 20rpx 20rpx;
}

.detail-item {
  position: relative;
  height: 400rpx;
  width: 100%;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}

.imgsize {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

.item-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: black;
  opacity: 0.7;
  padding: 20rpx 20rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  width: 100%;
  color: white;
  font-size: 18px;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.item-top {
  position: absolute;
  left: 10rpx;
  top: 20rpx;
  background-color: #0dbb2a;
  border-radius: 10rpx;
  color: white;
  width: 150rpx;
  font-size: 13px;
  padding: 10rpx 10rpx;
}

.top-bg {
  background-color: red;
}

.icon-size20 {
  width: 14px;
  height: 14px;
  color: white;
}