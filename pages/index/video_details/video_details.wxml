<!-- 视频 -->
<wxs module="filter" src="../../../utils/filter/filter.wxs"></wxs>
<view class="container">
	<view class="bg-white">
		<view class="videolistBox">
			<view class="videolistLogoBox">
				<video class="videolistLogo" src="{{videoDetails.filePath}}" />
				<view class="VL_MSKBox">
					<view class="VL_MSK text_ellipsis_two">{{videoDetails.title}}</view>
				</view>
			</view>
		</view>
		<view class="clearfix title01">
			<view class="float-l flex-con align-items-center">
				<image class="pageViews" src="{{videoDetails.image_path}}" />
				{{videoDetails.readNumber}}人浏览
			</view>
			<text class="float-r">{{filter.dateFormate(videoDetails.addTime)}}</text>
		</view>
	</view>
	<!-- test -->
	<!-- 评论 -->
	<view class="bg-white CommentsBox">
		<view class="CB_title01">全部评论（{{commentNum}}）</view>
		<view class="CB_con" wx:for="{{commentslist}}" wx:for-item="commentslist" wx:key="index">
			<view class="CB_avatar">
				<image class="videolistLogo" src="{{commentslist.headImage}}" />
			</view>
			<view class="CB_text">
				<view class="clearfix CBT_01">
					<text>{{commentslist.userName}}</text>
					<view class="float-r CBT_01_img flex-con align-items-center">
						<image wx:if="{{wxUserInfo.avatarUrl&&wxUserInfo.avatarUrl!=''}}"
							bindtap="{{commentslist.isPraised?'TapCommentCancenl':'TapCommentPraise'}}" data-id="{{commentslist.id}}"
							data-uid="{{commentslist.userId}}" class="icon_Tags"
							src="/images/icon_Tags0{{commentslist.isPraised?'2':'1'}}.png" />
						<button wx:else class="getUserInfoStyle icon_Tags" open-type="getUserInfo"
							bindgetuserinfo="bindGetUserInfo">
							<image class="icon_Tags" src="/images/icon_Tags0{{commentslist.isPraised?'2':'1'}}.png" />
						</button>
						{{commentslist.likeNumber}}
					</view>
				</view>
				<view class="CBT_02">{{commentslist.content}}</view>
				<view class="CBT_03">
					{{filter.dateFormate(commentslist.addTime)}}
					<text wx:if="{{wxUserInfo.avatarUrl&&wxUserInfo.avatarUrl!=''}}" bindtap="TapReply"
						data-id="{{commentslist.id}}" data-uid="{{commentslist.userId}}" data-parent-id="{{commentslist.id}}">
						回复TA
					</text>
					<button wx:else class="getUserInfoStyle inline CBT_03" open-type="getUserInfo"
						bindgetuserinfo="bindGetUserInfo">
						<text>回复TA</text>
					</button>
				</view>
				<view class="CB_con_next" wx:if="{{commentslist.reply&&commentslist.reply.length!=0}}">
					<view class="CB_con" wx:for="{{commentslist.reply}}" wx:for-item="item" wx:key="index">
						<view class="CB_avatar">
							<image class="videolistLogo" src="{{item.headImage}}" />
						</view>
						<view class="CB_text">
							<view class="clearfix CBT_01">
								<text>{{item.userName}}</text>
								<view class="float-r CBT_01_img flex-con align-items-center">
									<image wx:if="{{wxUserInfo.avatarUrl&&wxUserInfo.avatarUrl!=''}}"
										bindtap="{{item.isPraised?'TapCommentCancenl':'TapCommentPraise'}}" data-id="{{item.id}}"
										data-uid="{{item.userId}}" class="icon_Tags"
										src="/images/icon_Tags0{{item.isPraised?'2':'1'}}.png" />
									<button wx:else class="getUserInfoStyle icon_Tags" open-type="getUserInfo"
										bindgetuserinfo="bindGetUserInfo">
										<image class="icon_Tags" src="/images/icon_Tags0{{item.isPraised?'2':'1'}}.png" />
									</button>
									{{item.likeNumber}}
								</view>
							</view>
							<view wx:if="{{!item.byUserId}}" class="CBT_02">{{item.content}}</view>
							<view wx:else class="CBT_02">
								回复{{item.byUserName}}:{{item.content}}
							</view>
							<view class="CBT_03">
								{{filter.dateFormate(item.addTime)}}
								<text wx:if="{{wxUserInfo.avatarUrl&&wxUserInfo.avatarUrl!=''}}" bindtap="TapReply"
									data-id="{{item.id}}" data-uid="{{item.userId}}" data-parent-id="{{commentslist.id}}">
									回复TA
								</text>
								<button wx:else class="getUserInfoStyle inline CBT_03" open-type="getUserInfo"
									bindgetuserinfo="bindGetUserInfo">
									<text>回复TA</text>
								</button>
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
	<!-- <view class="clearfix spacing" /> -->
	<view wx:if="{{!comments_input}}" class="clearfix bg-white publishBox flex-con align-items-center">
		<view bindtap="TapReplyCon" class="flex-2 PB_Icon01 flex-con align-items-center flex-con-center">
			{{commentNum}}
			<image wx:if="{{wxUserInfo.avatarUrl&&wxUserInfo.avatarUrl!=''}}" class="ml19 icon_message"
				src="/images/icon_message.png" />
			<button wx:else class="getUserInfoStyle ml19 icon_message" open-type="getUserInfo"
				bindgetuserinfo="bindGetUserInfo">
				<image class="icon_message" src="/images/icon_message.png" />
			</button>
		</view>
		<!-- <view>
		<input 
			bindconfirm="sendComments" 
			confirm-type="send" 
			type="text" 
			value="{{sendCommentsValue}}"
			placeholder="说点什么" />
	</view> -->
		<view class="flex-2 PB_Icon02 flex-con align-items-center flex-con-center">
			{{praisedNum}}
			<image wx:if="{{wxUserInfo.avatarUrl&&wxUserInfo.avatarUrl!=''}}"
				bindtap="{{isPraised?'TapCommentCancenlCon':'TapCommentPraiseCon'}}" class="ml19 icon_TagsBig"
				src="/images/icon_TagsBig0{{isPraised?'2':'1'}}.png" />
			<button wx:else class="getUserInfoStyle ml19 icon_TagsBig" open-type="getUserInfo"
				bindgetuserinfo="bindGetUserInfo">
				<image class="icon_TagsBig" src="/images/icon_TagsBig0{{videoDetails.isPraised?'2':'1'}}.png" />
			</button>
		</view>
		<view class="flex-3 title02_2 flex-con align-items-center flex-con-center icon_WeChatBox">
			<image src="/images/icon_WeChat.png" />
			微信好友
			<button class="shareBtn" open-type="share" data-name="pageShare">点击分享</button>
		</view>
		<!-- <view class="flex-2 title02_3 flex-con align-items-center flex-con-center">
			<image src="/images/icon_Circle.png" />
			朋友圈
		</view> -->
	</view>
</view>
<view class="comments_input" wx:if="{{comments_input}}">
	<input focus="true" bindblur="bindblurFun" style="bottom:{{sendCommentsHeight}}rpx;height: 100rpx;"
		bindconfirm="sendComments" confirm-type="send" placeholder="{{msg}}"
		placeholder-style="{{comments_input?'':'color: transparent'}}" value="{{sendCommentsValue}}" />
</view>
