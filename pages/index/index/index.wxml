<view wx:if="{{pageType==3}}" class="container">
	<view class="bg-white videolistBox" wx:for="{{videolist}}" wx:for-item="videolist" wx:key="index">
		<view class="videolistLogoBox icon_playBox">
			<!-- <video id="myVideo{{videolist.id}}" class="videolistLogo" src="{{videolist.file_path}}" /> -->
			<video 
				class="videolistLogo" 
				id="myVideo{{index}}" 
				src='{{videolist.filePath}}' 
				controls="{{controls}}" 
				custom-cache="{{cache}}" 
				object-fit='cover' 
				show-center-play-btn="{{playBtn}}" 
				autoplay='{{true}}' 
				wx:if='{{index==indexCurrent}}'></video>
			<block wx:if='{{index!=indexCurrent}}'>
				<image class='videolistLogo' src='{{videolist.imagePath}}'></image>
				<image data-index='{{index}}' bindtap='videoPlay' class="icon_playBig" src="/images/icon_play.png"></image>
			</block>
			<view class="VL_MSK flex-con align-items-center" wx:if='{{index!=indexCurrent}}'>
				<text class="text_ellipsis_two">{{videolist.title}}</text>
			</view>
		</view>
		<view class="VL_info flex-con align-items-center">
			<view class="flex-1 tipLeft flex-con align-items-center">
				<image class="pageViews" src="/images/pageViews.png" />
				<!-- <image class="pageViews" src="{{videolist.imagePath}}" /> -->
				{{videolist.readNumber>9999?'9999+':videolist.readNumber}}人浏览
			</view>
			<view class="flex-1 VLI_right">
				<view class="float-r icon_WeChatBox">
					<image class="icon_WeChat" src="/images/icon_WeChat.png" />
					<button class="shareBtn" open-type="share" data-name="pageShare" data-id="{{videolist.id}}" data-title="{{videolist.title}}">
						点击分享
					</button>
				</view>
				<!-- <image class="float-r icon_Circle" src="/images/icon_Circle.png" /> -->
				<view 
					bindtap="TaptoVideo_details"
					data-id="{{videolist.id}}"
					class="float-r icon_messageBox flex-con align-items-center">
					{{videolist.commentNumber}}
					<image class="icon_message" src="/images/icon_message.png" />
				</view>
			</view>
		</view>
	</view>
</view>

