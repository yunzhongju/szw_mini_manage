<!-- 推荐 -->
<view wx:if="{{pageType==1}}" class="container contentBox01">
	<swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000" circular='true'>
		<swiper-item wx:for="{{bannerList}}" wx:for-item="item" wx:key="*this" bindtap="TaptoUrl" data-url="{{item.link}}">
			<view>
				<image src="{{item.imagePath}}" style="width:100%;" />
			</view>
		</swiper-item>
	</swiper>
		<view class="bg-white newlistBox">
		<view class="clearfix flex-con flex-con-start newlist" wx:for="{{newlist}}" wx:for-item="newlist" wx:key="index" bindtap="TaptoNews_details" data-id="{{newlist.id}}">
			<view class="newlistLeft">
				<view class='title text_ellipsis_two'>{{newlist.title}}</view>
				<view class='clearfix tip'>
					<view class="float-l tipLeft flex-con align-items-center">
						<image class="pageViews" src="/images/pageViews.png" />
						{{newlist.readNumber}}人浏览
					</view>
					<view 
						style="line-height: 30rpx;"
						class="float-r NewTipRight {{newlist.hot_str=='热门'?'NewTipRight02':'NewTipRight01'}}">
						<!-- {{newlist.hot_str}} -->
						推荐
					</view>
				</view>
			</view>
			<image  class="newlistLogo" mode="aspectFill" src="{{newlist.imagePath}}"></image>
		</view>
	</view>
	<view class="bg-white projectsListBox">
		<block wx:if="{{projectsList.length>2}}">
			<view class="title">精选专题</view>
			<swiper class="pLBSwiper" display-multiple-items="3">
				<swiper-item class="pLBitem" wx:for="{{projectsList}}" wx:for-item="item" wx:key="i" bindtap="TaptoProjects_details" data-id="{{item.id}}">
					<view class="pLBImg flex-con flex-con-center align-items-center">
						<text class="pLBText">{{item.title||""}}</text>
						<image src="{{item.image_path}}" />
					</view>
				</swiper-item>
				<swiper-item class="pLBitem" bindtap="TaptoProjects">
					<view class="pLBImgAll flex-con flex-con-center align-items-center">
						<image src="/images/icon_all.png" />
					</view>
				</swiper-item>
			</swiper>
		</block>
		<view class="clearfix flex-con flex-con-start newlist" wx:for="{{noRecommentNews}}" wx:for-item="newlist" wx:key="index" bindtap="TaptoNews_details" data-id="{{newlist.id}}">
			<view class="newlistLeft">
				<view class='title text_ellipsis_two'>{{newlist.title}}</view>
				<view class='clearfix tip'>
					<view class="float-l tipLeft flex-con align-items-center">
						<image class="pageViews" src="/images/pageViews.png" />
						{{newlist.readNumber}}人浏览
					</view>
					<view wx:if="{{newlist.hot_str}}" class="float-r NewTipRight {{newlist.hot_str=='热门'?'NewTipRight02':'NewTipRight01'}}">
						{{newlist.hot_str}}
					</view>
				</view>
			</view>
			<image wx:if="{{newlist.type==1}}" class="newlistLogo" mode="aspectFill" src="{{newlist.imagePath}}"></image>
			<view wx:else class="newlistLogo icon_playBox">
				<image class="newlistLogo" mode="aspectFill" src="{{newlist.imagePath}}"></image>
			</view>
		</view>
	</view>
</view>
