@import "../../../utils/css/common.wxss";
.article-title {
    width: 100%;
    height: 401rpx;
}

.article-title .title-text {
    height: 80rpx;
    line-height: 80rpx;
    text-indent: 20rpx;
    background-color: rgba(0, 0, 0, .4);
    color: #fff;
    font-size: 30rpx;
}

.col-list-box {
    padding-left: 20rpx;
}

.col-list-box .item-box {
    width: 345rpx;
    height: 180rpx;
    background-color: #ffffff;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.col-list-box .item-box .col-pic {
    width: 60rpx;
    height: 60rpx;
    margin-right: 40rpx;
}

.col-list-box .item-box .msg-box .title {
    font-size: 30rpx;
    color: #000;
    line-height: 42rpx;
    height: 42rpx;
}
.col-list-box .item-box .msg-box.title2{
    width: 164rpx;
    white-space: nowrap !important;
    text-overflow: ellipsis !important;
    overflow: hidden !important;
    word-break: break-all !important;
}
.col-list-box .item-box .msg-box .discription {
    font-size: 24rpx;
    color: #9fa0a0;
    line-height: 42rpx;
    height: 42rpx;
}