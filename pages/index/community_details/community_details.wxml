<!-- 区域 -->
<view class="container contentBox01">
  <view class="area">
      <image mode="aspectFill" src="{{communityDetails.image_path}}"></image>
      <view class="areaInfo">
       封面投稿人 {{communityDetails.image_name}}
      </view>
      <view class="FocusOnBox">
        <view class="FocusOn FocusOn{{isAttention==1?1:0}} flex-con flex-con-center align-items-center" bindtap="isFocusOn" data-on="{{isAttention}}">
          <image src="/images/FocusOn{{isAttention==1?1:0}}.png"></image>{{isAttention==1?'已关注':'关注'}}
        </view>
      </view>
  </view>
  <view class="bg-white newlistBox">
    <view class="clearfix flex-con flex-con-start newlist" wx:for="{{list}}" wx:for-item="item" wx:key="index" bindtap="{{item.type==1?'TaptoNews_details':'TaptoVideo_details'}}" data-id="{{item.id}}">
      <view class="flex-1 newlistLeft">
        <view class='title text_ellipsis_two'>{{item.title}}</view>
        <view class='clearfix tip'>
					<view class="float-l tipLeft flex-con align-items-center">
						<image class="pageViews" src="/images/pageViews.png" />
						{{item.read_number}}人浏览
					</view>
					<view wx:if="{{item.hot!=0}}" class="float-r NewTipRight {{item.hot==1||item.hot==2?'NewTipRight02':'NewTipRight01'}}">
						{{item.hot==1?"置顶":item.hot==2?"热门":item.hot==3?"推荐":"本地"}}
					</view>
				</view>
      </view>
      <image wx:if="{{item.type==1}}" class="newlistLogo" mode="aspectFill" src="{{item.image_path}}"></image>
			<view wx:else class="newlistLogo icon_playBox">
				<image class="newlistLogo" mode="aspectFill" src="{{item.image_path}}"></image>
				<!-- <video class="newlistLogo" src="{{item.file_path}}" controls="{{false}}" /> -->
				<image class="icon_play" src="/images/icon_play.png"></image>
			</view>
    </view>
  </view>
</view>