@import "../../../utils/css/common.wxss";

/* 评论 */

.CommentsBox {
    padding: 0 20rpx 0 32rpx;
    margin-bottom: 74rpx;
}

.CB_con {
    padding: 26rpx 0;
    border-bottom: 1rpx solid #E6E6E6;
}

.CB_avatar {
    width: 48rpx;
    height: 48rpx;
}

.CB_avatar image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
}

.CB_text {
    margin: -48rpx 0 0 68rpx;
}

.CBT_01 {
    font-size: 24rpx;
    width: 100%;
    padding-right: 12rpx;
}

.CBT_01 text {
    font-weight: 500;
}

.CBT_01_img image {
    margin-right: 12rpx;
}

.CBT_02 {
    font-size: 24rpx;
    color: #666;
    margin: 12rpx 0 20rpx;
}

.CBT_03 {
    font-size: 20rpx;
    color: #999;
}

.CBT_03 text {
    color: #0091FF;
    margin-left: 28rpx;
}

.CB_all {
    font-size: 26rpx;
    color: #666666;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
}

.CB_con_next {
    background-color: #F9F9F9;
    border-radius: 4rpx;
    margin: 16rpx 0 20rpx;
    padding: 0 20rpx 0 32rpx;
}

.CB_con_next .CBT_01 {
    padding-right: 0;
}


/* 发表评论 */

.publishBox {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    height: 98rpx;
    padding: 27rpx 32rpx;
}

.PB_input {
    height: 100%;
    width: 493rpx;
    font-size: 26rpx;
    color: #999;
    padding-left: 15rpx;
}

.PB_Icon02 {
    margin-left: 44rpx;
}