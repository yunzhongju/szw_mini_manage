@import '../../../../utils/css/common.wxss';
.container{
  background-color: #fff;
}
.player_info_top {
  height: 370rpx;
  width: 100%;
}

.player_info_top image {
  width: 100%;
  height: 100%;
}

.player_info_mid {
  padding: 0 36rpx;
  display: flex;
  flex-direction: column;
  margin-top: 114rpx;
  padding-bottom: 50rpx;
}

.btn {
  width: 100%;
	position: fixed;
	bottom: 0;
  left: 0;
  right: 0;
  /* border-radius: 50rpx; */
  font-size: 14px;
  background-color: #FF2900;
  height: 74rpx;
}

.player_info_mid view {
  display: flex;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.player_info_mid view text {
  color: rgba(16, 16, 16, 1);
  font-size: 14px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.player_info_mid view .player_name {
  color: rgba(16, 16, 16, 1);
  font-size: 16px;
  text-align: left;
  font-family: PingFangSC-bold;
  font-weight: 600;
  width: 70%;
}