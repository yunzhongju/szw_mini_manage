  top: 32rpx;
  z-index: 100;
  display: flex;
  align-items: center;
	background-color: #fff;
	padding: 10rpx 30rpx;
	border-radius: 40rpx;
	opacity: 0.9;
}

.active_detail_top .active_share image {
  width: 48rpx;
  height: 48rpx;
}

.active_detail_top .active_share text {
  color: rgba(16, 16, 16, 1);
  font-size: 28rpx;
  text-align: left;
