  justify-content: center;
  position: relative;
}
.active_serach .serach_info{
  height: 56rpx;
  display: flex;
  align-items: center;
  /* flex-basis: 570rpx; */
  background-color: #ECECEC;
  border-radius: 5rpx;
  border-radius: 40rpx;
  width: 600rpx;
}
.active_serach .serach_info input{
  margin-left: 16rpx;
	width:65%;
	
}
.active_serach .serach_info image{
  height: 26rpx;
  width: 26rpx;
  margin-left: 16rpx;
}
.active_serach text{
  flex: 1;
  color: rgba(42, 143, 247, 1);
  font-size: 18px;
  text-align: center;
  font-family: Helvetica-regular;
