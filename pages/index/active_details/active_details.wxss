  padding: 0 40rpx;
}
.active_detail_info .active_merber view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.active_detail_info .active_merber view text{
  color: rgba(16, 16, 16, 1);
  font-size: 14px;
  text-align: left;
  font-family: PingFangSC-regular;
  margin-bottom: 10rpx;
  font-weight: 500;
}
.active_detail_info .active_time{
  height: 80rpx;
