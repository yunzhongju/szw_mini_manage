/* pages/index/article_detail/article_detail.wxss */

@import "../../../utils/css/common.wxss";
.article-title {
    width: 100%;
    height: 401rpx;
    position: relative;
}
.detailTitle{
    display: flex;
    padding: 32rpx 32rpx;
    font-size: 20px;
    font-weight: 600;
}
.article-title .bg-pic {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.article-title .title-text {
    height: 80rpx;
    line-height: 80rpx;
    text-indent: 20rpx;
    background-color: rgba(0, 0, 0, .4);
    color: #fff;
    font-size: 30rpx;
}

.from-time {
    padding: 0 20rpx;
}

.from-time .from,
.from-time .time {
    font-size: 24rpx;
    color: #9fa0a0;
    line-height: 70rpx;
}

.themes .theme-item {
    line-height: 50rpx;
    font-size: 24rpx;
}

.themes .theme-item .item-text {
    font-weight: bold;
}

/* 视频 */

.video-box .video-list-logo {
    width: 100%;
    height: 350rpx;
}

/* 相关图片 */

.relative-pics image {
    width: 100%;
    height: 350rpx;
    margin-bottom: 20rpx;
}

/* 底部分享 */

.bottom-fixed {
    height: 100rpx;
    background-color: #fff;
}

.article-share-btn {
    padding: 0;
    border: 0;
    background-color: #fff;
}

.article-share-btn:after {
    content: "";
    border: none;
}

.bottom-fixed {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}

.bottom-fixed .right-share image {
    width: 40rpx;
    height: 40rpx;
    margin-left: 60rpx;
}

.main_text {
    padding: 0 20rpx;
    margin-bottom: 100rpx;
}

.font24 {
    font-size: 26rpx;
    line-height: 52rpx;
    width: 100%;
    overflow: hidden;
    text-align: justify;
}

.font24 .imgsty {
    max-width: 100%;
    margin: 20rpx auto;
}