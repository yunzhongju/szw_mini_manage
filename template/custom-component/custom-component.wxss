/* 搜索框 */

.search {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    padding-left: 32rpx;
    background-color: #fff;
}

.search_arr {
    border-radius: 4rpx;
    position: relative;
    float: left;
    width: 444rpx;
    height: 64rpx;
    background-color: #F2F2F2;
    font-size: 24rpx;
    color: #999999;
}

.search_arr .inputStyle {
    margin-left: 60rpx;
    height: 64rpx;
    border-radius: 5px;
    color: #999;
    font-size: 24rpx;
    line-height: 64rpx;
}

.searchcion {
    margin: 12rpx 10rpx 12rpx;
    position: absolute;
    left: 0;
    z-index: 2;
    width: 20rpx;
    height: 20rpx;
    text-align: center;
}